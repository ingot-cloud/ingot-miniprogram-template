<in-nav-container title="{{title}}" border="{{false}}" leftArrow>

  <view class="top-container">
    <van-image round image-class="logo" custom-class="logo" url="" />
  </view>

  <van-cell-group title="{{hint}}">
    <van-field model:value="{{ phone }}" type="number" placeholder="请输入手机号" clearable label="手机号" />
    <van-field model:value="{{ confirmPhone }}" type="number" placeholder="请再次输入手机号" clearable label="确认手机号" />
  </van-cell-group>

  <view class="confirm-container">
    <van-button custom-class="confirm-button" type="primary" size="normal" block bind:click="onBindPhone">确定</van-button>
  </view>

</in-nav-container>

<van-toast id="van-toast" />